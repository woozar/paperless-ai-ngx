{
  "name": "@repo/mcp-server",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.js --banner:js=\"import { createRequire } from 'module';const require = createRequire(import.meta.url);\"",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@repo/paperless-client": "workspace:*",
    "@repo/types": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.19",
    "dotenv-cli": "^8.0.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.14",
    "esbuild": "^0.27.1",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "5.9.2",
    "vitest": "^4.0.14"
  }
}
